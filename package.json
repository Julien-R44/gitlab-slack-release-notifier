{
  "name": "gitlab-slack-release-notifier",
  "type": "module",
  "version": "1.0.0-beta.2",
  "packageManager": "pnpm@7.0.1",
  "description": "ðŸ¤– A small service that sends a notification on Slack when a release has been published on Gitlab.",
  "keywords": [
    "gitlab",
    "slack",
    "notification",
    "release"
  ],
  "homepage": "https://github.com/Julien-R44/gitlab-slack-release-notifier#readme",
  "bugs": {
    "url": "https://github.com/Julien-R44/gitlab-slack-release-notifier/issues"
  },
  "license": "MIT",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/gitlab-slack-release-notifier.git"
  },
  "funding": "https://github.com/sponsors/Julien-R44",
  "files": [
    "dist"
  ],
  "bin": {
    "gitlab-slack-release-notifier": "./dist/index.cjs"
  },
  "scripts": {
    "build": "rimraf dist && unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "start": "node --experimental-specifier-resolution=node --loader=ts-node/esm src/index.ts",
    "test": "node --experimental-specifier-resolution=node --loader=ts-node/esm bin/test.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^3.29.0",
    "pino-pretty": "^9.2.0",
    "slack-block-builder": "^2.5.0",
    "undici": "^5.2.0"
  },
  "devDependencies": {
    "@antfu/ni": "^0.16.2",
    "@japa/assert": "^1.3.4",
    "@japa/runner": "^2.0.8",
    "@japa/spec-reporter": "^1.1.12",
    "@julr/eslint-config": "^0.3.0",
    "@types/node": "^17.0.34",
    "bumpp": "^7.1.1",
    "eslint": "^8.15.0",
    "pnpm": "^7.1.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "unbuild": "^0.7.4"
  },
  "eslintConfig": {
    "extends": "@julr",
    "rules": {
      "n/no-unsupported-features/es-syntax": "off",
      "n/no-missing-import": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "openapi-types"
      ]
    }
  }
}
