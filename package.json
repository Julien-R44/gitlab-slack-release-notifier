{
  "name": "gitlab-slack-release-notifier",
  "version": "1.0.0",
  "description": "ðŸ¤– A small service that sends a notification on Slack when a release has been published on Gitlab.",
  "keywords": [
    "gitlab",
    "slack",
    "notification",
    "release"
  ],
  "homepage": "https://github.com/Julien-R44/gitlab-slack-release-notifier#readme",
  "bugs": {
    "url": "https://github.com/Julien-R44/gitlab-slack-release-notifier/issues"
  },
  "packageManager": "pnpm@7.0.1",
  "license": "MIT",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/gitlab-slack-release-notifier.git"
  },
  "funding": "https://github.com/sponsors/Julien-R44",
  "bin": {
    "gitlab-slack-release-notifier": "./dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "start": "esmo src/index.ts",
    "test": "esmo bin/test.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/ni": "^0.16.2",
    "@japa/assert": "^1.3.4",
    "@japa/runner": "^2.0.8",
    "@japa/spec-reporter": "^1.1.12",
    "@types/node": "^17.0.34",
    "bumpp": "^7.1.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esmo": "^0.15.0",
    "pnpm": "^7.1.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "unbuild": "^0.7.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build",
    "dist"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "openapi-types"
      ]
    }
  },
  "dependencies": {
    "fastify": "^3.29.0",
    "node-fetch": "^3.2.4",
    "slack-block-builder": "^2.5.0",
    "undici": "^5.2.0"
  }
}
